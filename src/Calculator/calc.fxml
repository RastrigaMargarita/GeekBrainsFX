<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane hgap="10" vgap="10" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="Calculator.Controller">
    <TextArea fx:id="log" disable="true" focusTraversable="false" prefHeight="60" prefWidth="100" wrapText="true"
              GridPane.columnIndex="0" GridPane.columnSpan="3" GridPane.halignment="LEFT" GridPane.rowIndex="0"
              GridPane.valignment="TOP">
        <font>
            <Font size="12.0"/>
        </font>
    </TextArea>
    <Label fx:id="result" GridPane.columnIndex="3" GridPane.columnSpan="2" GridPane.halignment="RIGHT"
           GridPane.rowIndex="0" GridPane.valignment="TOP">
        <font>
            <Font name="System Bold" size="15.0"/>
        </font>
    </Label>
    <Button onAction="#onActionNumeric" prefHeight="25.0" GridPane.columnIndex="0" GridPane.rowIndex="1">1</Button>
    <Button onAction="#onActionNumeric" prefHeight="25.0" GridPane.columnIndex="1" GridPane.rowIndex="1">2</Button>
    <Button onAction="#onActionNumeric" prefHeight="25.0" GridPane.columnIndex="2" GridPane.rowIndex="1">3</Button>

    <Button onAction="#onAction" prefHeight="25.0" GridPane.columnIndex="3" GridPane.rowIndex="1">+</Button>
    <Button onAction="#onAction" prefHeight="25.0" GridPane.columnIndex="4" GridPane.rowIndex="1">-</Button>

    <Button onAction="#onActionNumeric" prefHeight="25.0" GridPane.columnIndex="0" GridPane.rowIndex="2">4</Button>
    <Button onAction="#onActionNumeric" prefHeight="25.0" GridPane.columnIndex="1" GridPane.rowIndex="2">5</Button>
    <Button onAction="#onActionNumeric" prefHeight="25.0" GridPane.columnIndex="2" GridPane.rowIndex="2">6</Button>

    <Button onAction="#onAction" prefHeight="25.0" GridPane.columnIndex="3" GridPane.rowIndex="2">*</Button>
    <Button onAction="#onAction" prefHeight="25.0" GridPane.columnIndex="4" GridPane.rowIndex="2">/</Button>

    <Button onAction="#onActionNumeric" prefHeight="25.0" GridPane.columnIndex="0" GridPane.rowIndex="3">7</Button>
    <Button onAction="#onActionNumeric" prefHeight="25.0" GridPane.columnIndex="1" GridPane.rowIndex="3">8</Button>
    <Button onAction="#onActionNumeric" prefHeight="25.0" GridPane.columnIndex="2" GridPane.rowIndex="3">9</Button>

    <Button onAction="#onActionSpes" prefHeight="25.0" GridPane.columnIndex="3" GridPane.rowIndex="3">%</Button>
    <Button onAction="#onActionSpes" prefHeight="25.0" GridPane.columnIndex="4" GridPane.rowIndex="3">âˆš</Button>


    <Button onAction="#onActionNumeric" prefHeight="25.0" GridPane.columnIndex="0" GridPane.rowIndex="4">0</Button>
    <Button onAction="#onActionNumeric" GridPane.columnIndex="1" GridPane.rowIndex="4">00</Button>
    <Button onAction="#onActionNumeric" GridPane.columnIndex="2" GridPane.rowIndex="4">.</Button>

    <Button defaultButton="true" onAction="#onActionSpes" GridPane.columnIndex="3" GridPane.rowIndex="4">=</Button>
    <Button cancelButton="true" onAction="#onActionNull" style="-fx-background-color: #e4b6c6" GridPane.columnIndex="4"
            GridPane.rowIndex="4">C
    </Button>

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>


</GridPane>
